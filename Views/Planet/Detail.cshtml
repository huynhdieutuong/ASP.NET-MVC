@model AppMVC.Models.PlanetModel

<h1>@Model.Name</h1>

<div class="card w-50">
  <img class="card-img-top" src="~/planet/@(Model.Name).jpg" alt="@Model.Name" />
  <div class="card-body">
    <div class="card-text">@Model.Content</div>
    <a class="card-link" asp-action="Index">Planets</a>
  </div>
</div>